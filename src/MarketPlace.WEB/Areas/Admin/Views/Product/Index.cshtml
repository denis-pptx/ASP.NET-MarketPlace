@model ProductListViewModel
@inject IShopService shopService

@{
    ViewData["Title"] = "Товары";
    int num = 1;

    var response = await shopService.GetByIdAsync(Model.ShopId);
    string shopName = response.StatusCode switch
    {
        HttpStatusCode.OK => $"\"{response.Data!.Name}\"",
        _ => ""
    };
}

<h2>Список товаров магазина @shopName</h2>

<form asp-action="Index">
    <p>
        <label asp-for="CategoryId">Категория: </label>
        <select asp-for="CategoryId" asp-items="Model.Categories">
            <option value="0">Все</option>
        </select>

        <input type="hidden" name="shopId" value="@Model.ShopId" />
        <input type="submit" value="Фильтр" />
    </p>
</form>

<table border="1">
    <thead>
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Стоимость</th>
            <th>Категория</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@(num++)</td>
                <td>@product.Name</td>
                <td><textarea readonly>@product.Description</textarea></td>
                <td>@product.Price</td>
                <td>@product.Category.GetDisplayName()</td>

                <td>
                    <a class="btn btn-primary" asp-action="Save" asp-route-id="@product.Id">Изменить</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <input type="hidden" name="shopId" value="@Model.ShopId" />
                        <input class="btn btn-danger" type="submit" value="Удалить" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>


<p>
    <a class="btn btn-primary" asp-action="Save" asp-route-shopId="@Model.ShopId">Добавить товар</a>
</p>

<p>
    <a class="btn btn-primary" asp-controller="Shop" asp-action="Details" asp-route-id="@Model.ShopId">Назад</a>
</p>



