@model ProductListViewModel
@inject IShopService shopService

@{
    ViewData["Title"] = "Товары";
    int num = 1;

    var response = await shopService.GetByIdAsync(Model.ShopId);
    string shopName = response.StatusCode switch
    {
        HttpStatusCode.OK => $"\"{response.Data!.Name}\"",
        _ => ""
    };
}

<h2>Список товаров магазина @shopName</h2>

<form asp-action="Index">
    <p>
        <label asp-for="CategoryId">Категория: </label>
        <select asp-for="CategoryId" asp-items="Model.Categories">
            <option value="0">Все</option>
        </select>

        <input type="hidden" name="shopId" value="@Model.ShopId" />
        <input type="submit" value="Фильтр" />
    </p>
</form>

<table border="1">
    <thead>
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Стоимость</th>
            <th>Категория</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@(num++)</td>
                <td>@product.Name</td>
                <td><textarea readonly>@product.Description</textarea></td>
                <td>@product.Price</td>
                <td>@product.Category.GetDisplayName()</td>

                <td>
                    <form asp-action="Save">
                        <input type="hidden" name="id" value="@product.Id" />
                        <input type="submit" value="Изменить" />
                    </form>
                </td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@product.Id" />
                        <input type="hidden" name="shopId" value="@Model.ShopId" />
                        <input type="submit" value="Удалить" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>


<p>
    <form asp-action="Save">
        <input type="hidden" name="shopId" value="@Model.ShopId" />
        <input type="submit" value="Добавить товар" />
    </form>
</p>

<p>
    <form asp-controller="Shop" asp-action="Details">
        <input type="hidden" name="id" value="@Model.ShopId" />
        <input type="submit" value="Назад" />
    </form>
</p>



