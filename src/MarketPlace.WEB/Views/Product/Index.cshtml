@model ProductListViewModel

@{
    ViewData["Title"] = "Товары";
    int num = 1;
}

<h2>Список товаров</h2>


<table border="1">
    <thead>
        <tr>
            <th>№</th>
            <th>Название</th>
            <th>Описание</th>
            <th>Стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@(num++)</td>
                <td>@product.Name</td>
                <td><textarea readonly>@product.Description</textarea></td>
                <td>@product.Price</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Изменить</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@product.Id">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>

            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Добавить товар</a>
</p>

