@model ProductListViewModel

@{
    ViewData["Title"] = "Product List";

    string IsChecked(SelectListItem item)
    {
        if (Model.SelectedCategories.Any(sli => sli.Value == item.Value))
        {
            return "checked";
        }
        return "";
    }
}

<div class="container">

    <h2>Product List</h2>

    <div class="row mb-3">
        <div class="col-md-12">
            <form method="post" asp-controller="Product" asp-action="Index">

                <div class="input-group mb-3" id="search-group">
                    <input type="text" class="form-control" placeholder="Поиск" asp-for="SearchString">
                    <button class="btn btn-secondary" type="button" id="search-clear">
                        <i class="fa fa-times"></i>
                    </button>
                    <button class="btn btn-primary" type="submit">Найти</button>
                </div>




                <h4>Categories:</h4>
                <div class="row">
                    @foreach (var category in Model.AllCategories)
                    {
                        <div class="col-md-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="categories" value="@category.Value" id="@category.Text" @IsChecked(category)>
                                <label class="form-check-label" for="@category.Text">@category.Text</label>
                            </div>
                        </div>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" src="@product.Name" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-sm btn-outline-secondary">View</a>
                                <button type="button" class="btn btn-sm btn-outline-secondary">Add to cart</button>
                            </div>
                            <small class="text-muted">$@product.Price</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#search-clear").click(function () {
                $("#search-group").find("input[type=text]").val("");
                setTimeout(() => {
                    $(this).blur();
                }, 100);
            });
        });
    </script>
}
