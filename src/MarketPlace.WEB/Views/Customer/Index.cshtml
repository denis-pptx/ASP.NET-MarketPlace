@model CustomerListViewModel

@{
    ViewData["Title"] = "Покупатели";
    int num = 1;
}

<h2>Список покупателей</h2>


<table border="1">
    <thead>
        <tr>
            <th>№</th>
            <th>Логин</th>
            <th>Пароль</th>
            <th>Возраст</th>
            <th>Почта</th>
            <th>Телефон</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@(num++)</td>
                <td>@customer.Login</td>
                <td>@customer.Password</td>
                <td>@customer.Profile.Age</td>
                <td>@customer.Profile.Email</td>
                <td>@customer.Profile.Phone</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id">Изменить</a>
                </td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@customer.Id">
                        <input type="submit" value="Удалить" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<p>
    <a asp-action="Create">Добавить покупателя</a>
</p>


